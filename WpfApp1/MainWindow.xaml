<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Mozi" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0">
            <StackPanel Grid.Column="0" Background="LawnGreen" Margin="20">
                <Label FontSize="18" HorizontalAlignment="Center" Content="Seatid"/>
                <Label FontSize="14" HorizontalAlignment="Center" Content="Name"/>
            </StackPanel>
        </ListBox>
        <StackPanel Grid.Column="1">
            <Label Content="Name:" Background="AliceBlue" Padding="10"/>
            <TextBox Text="John" Padding="10"/>
            <Button Content="Reserve" IsEnabled="false" Margin="10" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
